---
import { getLocalizedPath, type Locale } from '../i18n/translations';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	locale: Locale;
	description?: string;
}

const { title, locale, description = 'Professional portfolio website for Brian Jin, Applied AI Engineer' } = Astro.props;

// Generate hreflang URLs
const currentPath = Astro.url.pathname;
const deUrl = getLocalizedPath(currentPath, 'de');
const enUrl = getLocalizedPath(currentPath, 'en');
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/favicon-32x32.jpg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Main stylesheet -->
		<link rel="stylesheet" href="/assets/styles.css" />
		
		<!-- SEO and i18n meta tags -->
		<title>{title}</title>
		<link rel="canonical" href={`https://brianjin.eu${currentPath}`} />
		
		<!-- Hreflang tags for SEO -->
		<link rel="alternate" hreflang="de" href={`https://brianjin.eu${deUrl}`} />
		<link rel="alternate" hreflang="en" href={`https://brianjin.eu${enUrl}`} />
		<link rel="alternate" hreflang="x-default" href={`https://brianjin.eu${deUrl}`} />
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
