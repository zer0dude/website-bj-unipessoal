---
import { getCurrentLocale, getTranslation } from '../i18n/translations';

const locale = getCurrentLocale(Astro.url);
const t = (key: string) => getTranslation(locale, key);
---

<section id="about" class="about-section">
  <div class="content-container">
    <h3>{t('about.title')}</h3>
    
    <div class="about-content">
      <div class="about-text">
        <p class="about-description">
          {t('about.experience')}
        </p>
        <p class="about-description">
          {t('about.motivation')}
        </p>
      </div>
      
      <div class="social-links-section">
        <div class="social-links-container">
          <a href="https://www.linkedin.com/in/brian-zelun-jin/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label={t('about.social.linkedin')}>
            <img src="/assets/linkedin.svg" alt="LinkedIn" class="social-icon" />
          </a>
          <a href="https://github.com/zer0dude" target="_blank" rel="noopener noreferrer" class="social-link" aria-label={t('about.social.github')}>
            <img src="/assets/github.svg" alt="GitHub" class="social-icon" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
