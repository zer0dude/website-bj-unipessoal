---
import { getCurrentLocale, getTranslation } from '../i18n/translations';

const locale = getCurrentLocale(Astro.url);
const t = (key: string) => getTranslation(locale, key);
---

<section id="contact" class="contact-section">
  <div class="content-container">
    <h3>{t('contact.title')}</h3>
    <p class="section-description">{t('contact.description')}</p>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-item">
          <div class="mini-label-white">{t('contact.email.label')}</div>
          <a href="mailto:brian@brianjin.eu" class="contact-link">brian@brianjin.eu</a>
        </div>
        
        <div class="contact-item">
          <div class="mini-label-white">{t('contact.company.label')}</div>
          <div class="contact-text">Brian Jin Unipessoal</div>
        </div>
      </div>
      
      <form class="contact-form" action="#" method="POST">
        <div class="form-group">
          <label for="name" class="form-label">{t('contact.form.name.label')}</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            class="form-input" 
            placeholder={t('contact.form.name.placeholder')}
            required 
          />
        </div>
        
        <div class="form-group">
          <label for="email" class="form-label">{t('contact.form.email.label')}</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-input" 
            placeholder={t('contact.form.email.placeholder')}
            required 
          />
        </div>
        
        <div class="form-group">
          <label for="message" class="form-label">{t('contact.form.message.label')}</label>
          <textarea 
            id="message" 
            name="message" 
            class="form-textarea" 
            placeholder={t('contact.form.message.placeholder')}
            rows="5"
            required
          ></textarea>
        </div>
        
        <button type="submit" class="button form-button">
          {t('contact.form.submit')}
        </button>
      </form>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: 68px 0;
    border-top: 1px solid #353535;
  }
  
  .section-description {
    color: #a8a8a8;
    margin-bottom: 48px;
    max-width: 580px;
    line-height: 26px;
  }
  
  .contact-content {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  
  .contact-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .contact-link {
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    transition: color 0.2s ease;
  }
  
  .contact-link:hover {
    color: #a8a8a8;
  }
  
  .contact-text {
    color: #fff;
    font-size: 16px;
  }
  
  .contact-form {
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .form-label {
    color: #fff;
    font-size: 14px;
    font-weight: 500;
  }
  
  .form-input,
  .form-textarea {
    background-color: #2b2b2b;
    border: 1px solid #353535;
    border-radius: 8px;
    color: #fff;
    padding: 12px 16px;
    font-size: 14px;
    font-family: inherit;
    transition: border-color 0.2s ease, background-color 0.2s ease;
  }
  
  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #666;
    background-color: #333;
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .form-button {
    align-self: flex-start;
    margin-top: 16px;
  }
  
  @media screen and (max-width: 767px) {
    .contact-content {
      gap: 32px;
    }
    
    .contact-form {
      max-width: 100%;
    }
  }
</style>
