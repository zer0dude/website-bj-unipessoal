---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import { getTranslation, type Locale } from "../i18n/translations";

const locale: Locale = 'de';
const t = (key: string) => getTranslation(locale, key);
---

<Layout title={`${t('legal.impressum.title')} - Brian Jin`} locale={locale}>
  <div class="content">
    <Sidebar />
    <nav class="main">
      <div class="container">
        <div class="back-nav-container">
          <a href="/" class="back-nav-button w-inline-block">
            <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
            <div>{t('common.back')}</div>
          </a>
        </div>
        
        <div class="content-container">
          <h1>{t('legal.impressum.title')}</h1>
          
          <div class="legal-content">
            <div class="legal-section">
              <h3>Angaben gemäß § 5 TMG</h3>
              <p>{t('legal.impressum.content.name')}</p>
              <p style="white-space: pre-line;">{t('legal.impressum.content.address')}</p>
            </div>
            
            <div class="legal-section">
              <h3>Kontakt</h3>
              <p style="white-space: pre-line;">{t('legal.impressum.content.contact')}</p>
            </div>
            
            <div class="legal-section">
              <h3>Vertretungsberechtigte</h3>
              <p style="white-space: pre-line;">{t('legal.impressum.content.representative')}</p>
            </div>
            
            <div class="legal-section">
              <h3>Umsatzsteuer-Identifikationsnummer</h3>
              <p style="white-space: pre-line;">{t('legal.impressum.content.vat_number')}</p>
            </div>
            
            <div class="legal-section">
              <h3>Haftungshinweis</h3>
              <p>{t('legal.impressum.content.disclaimer')}</p>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </div>
  <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
</Layout>
